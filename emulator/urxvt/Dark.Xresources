! see https://smarttech101.com/urxvt-installation-color-scheme-fonts-resize-etc/

Xft.dpi: 96
Xft.antialias: true
Xft.autohint: true
Xft.hinting: true
Xft.hintstyle: hintfull
Xft.lcdfilter: lcdfilter
Xft.rgba: rgb

URxvt.perl-lib: /usr/lib/x86_64-linux-gnu/urxvt/perl/
URxvt.perl-ext-common: default,resize-font,selection-to-clipboard,config-reload,-confirm-paste

URxvt*buffered: false
URxvt*depth: 32
URxvt*imLocale: en_US.UTF-8
URxvt*termName: rxvt-unicode-256color
URxvt*skipBuiltinGlyphs: true

! Paste using Shift-Insert
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.keysym.Shift-Insert: eval:paste_clipboard

! fc-list | grep Fira
URxvt.font: xft:FiraCode-Retina:size=14:antialias=true
URxvt.boldFont: xft:FiraCode-Bold:size=14:antialias=true
URxvt.intensityStyles: false
URxvt.letterSpace: -1
URxvt.saveLines: 10000
URxvt.scrollBar: false
URxvt.transparent: false

! resize-font
URxvt.keysym.Control-minus:  resize-font:smaller
URxvt.keysym.Control-plus:   resize-font:bigger
URxvt.keysym.Control-equal:  resize-font:equal

! move between words
URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C

! Colors
URxvt.background:   [95]#1D2021
URxvt.foreground:   #FBF1C7

! black
URxvt.color0:       #1D2021
URxvt.color8:       #928374
! red
URxvt.color1:       #CC241D
URxvt.color9:       #FB4934
! green
URxvt.color2:       #98971A
URxvt.color10:      #B8BB26
! yellow
URxvt.color3:       #D79921
URxvt.color11:      #FABD2F
! blue
URxvt.color4:       #458588
URxvt.color12:      #83A598
! magenta
URxvt.color5:       #B16286
URxvt.color13:      #D3869B
! cyan
URxvt.color6:       #689D6A
URxvt.color14:      #8EC07C
! white
URxvt.color7:       #A89984
